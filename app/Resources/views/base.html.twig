<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Компания "ТеплоСтройМонтаж"{% endblock %}</title>
        {% block stylesheets %}
			<link href="{{ asset('css/bootstrap/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
			<link href="{{ asset('css/main.css') }}" rel="stylesheet" type="text/css" />
			<!-- link href="{{asset('Font-Awesome/css/font-awesome.min.css')}}" rel="stylesheet" -->
		{% endblock %}
			<script type="text/javascript" src="{{ asset('js/jquery-1.8.3.min.js') }}"></script>
			<script type="text/javascript" src="{{ asset('js/bootstrap/bootstrap.min.js') }}"></script>
                        <script type="text/javascript" src="{{ asset('js/tiny_mce/jquery.tinymce.js') }}"></script>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="main_container">
    {% block header %}{% endblock %}
            <div class="container-fluid">
                <div class="row-fluid">
                    <span class="span3 logo-name">
                        <div class="row-fluid">
                            <span class="span1"></span>
                        </div>
                            <div class="row-fluid">
                                <a href="/" style="color: #ffffff; text-decoration: none;">
                                    <h1 style="margin-top: 0px; margin-bottom: 0px;"><i>T&nbsp;C&nbsp;M</i></h1>
                                    <span style="font-size: 17px;">ТеплоСтройМонтаж</span>
                                </a>
                            </div>
                        <div class="row-fluid">
                            <span class="span1"></span>
                        </div>
                    </span>
                        <div class="row">
                            <span class="span6" id="logo" style="margin-left: 17px; width: 50%;"></span>
                            <span class="span3" style="margin-left: 5px; border-left-width: 0px; height: 120px;">
                                <form action="{{ path( "search" ) }}" method="POST" style="margin-bottom: 3px;">
                                    <input type="text" style="margin-top: 0px; width: 200px;" name="search" />
                                    <input type="submit" value="Поиск" style="margin-top: 0px; margin-bottom: 10px; height: 32px;">
                                </form>
                                <span>Email: <a href="mailto:tsmontag@mail.ru">tsmontag@mail.ru</a></span><br/><br />
                                <span>Тел: 8(495)915-56-87</span><br />
                                <address style="margin-bottom: 0px;">Москва, 2-й Гончарный пер, д. 6 стр. 4</address>
                            </span>
                        </div>
                </div>
            </div>
            <div class="row-fluid menu">
                <span class="span3"></span>
                <span class="span8" style="margin-left: 28px; font-size: 15.5px;">{{ knp_menu_render( 'TsmCatalogBundle:Builder:mainMenu', {'template' : 'TsmCatalogBundle:Menu:knp_menu.html.twig' } ) }}</span>
            </div>

        <h1 id="title">{% block page_title %}{% endblock %}</h1>
        <div class="container-fluid">
            <div class="row-fluid">
                {% block body %}{% endblock %}
            </div>
        </div>
		{% block footer %}
		{% endblock %}
            </div>
        {% block javascripts %}
            <script type="text/javascript">
                var _gaq = _gaq || [];
                _gaq.push(['_setAccount', 'UA-39021672-1']);
                _gaq.push(['_trackPageview']);

                (function() {
                  var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                  ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                  var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
                })();
            </script>
        {% endblock %}
    </body>
</html>
