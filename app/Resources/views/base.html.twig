<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
			<link href="{{ asset('css/bootstrap/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
			<link href="{{ asset('css/main.css') }}" rel="stylesheet" type="text/css" />
			<!-- link href="{{asset('Font-Awesome/css/font-awesome.min.css')}}" rel="stylesheet" -->
		{% endblock %}
			<script type="text/javascript" src="{{ asset('js/jquery-1.8.3.min.js') }}"></script>
			<script type="text/javascript" src="{{ asset('js/bootstrap/bootstrap.min.js') }}"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="main_container">
    {% block header %}{% endblock %}
            <div class="container-fluid">
                <div class="row-fluid">
                    <span class="span3 logo-name">
                        <div class="row-fluid">
                            <span class="span1"></span>
                        </div>
                            <div class="row-fluid"><h1 style="margin-top: 0px; margin-bottom: 0px;">TCM</h1>ТеплоСтройМонтаж</div>
                        <div class="row-fluid">
                            <span class="span1"></span>
                        </div>
                    </span>
                        <div class="row">
                            <span class="span6" id="logo" style="margin-left: 17px; width: 50%;"></span>
                            <span class="span3" style="margin-left: 5px; border-left-width: 0px;">
                                <span>Тел: 8(495)915-56-87</span><br />
                                <br />Москва, 2-й Гончарный пер, д. 6к4, оф.307<br/>
                                <input type="text" style="margin-top: 30px; width: 200px;"/><input type="submit" value="Поиск" style="margin-top: 18px; height: 32px;">
                            </span>
                        </div>
                </div>
            </div>
            <div class="row-fluid menu">
                <span class="span3"></span>
                <span class="span8" style="margin-left: 28px;">{{ knp_menu_render( 'TsmCatalogBundle:Builder:mainMenu', {'template' : 'TsmCatalogBundle:Menu:knp_menu.html.twig' } ) }}</span>
            </div>

        <h1 id="title">{% block page_title %}{% endblock %}</h1>
        <div class="container-fluid">
            <div class="row-fluid">
                {% block body %}{% endblock %}
            </div>
        </div>
		{% block footer %}
		{% endblock %}
            </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
