{# empty Twig template #}
{% extends '::base.html.twig' %}
{% block title %}Обратная связь{% endblock %}
{% block body %}
<span class="span2"></span>
<span class="span10">
    {% if app.session.hasFlash('feedback-notice') %}
        <div class="alert alert-success">
             <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ app.session.flash('feedback-notice') }}
        </div>
    {% endif %}

    <form action="{{ path('_static_feedback') }}" method="post" {{ form_enctype(form) }} class="contact">
        {{ form_errors(form) }}

        {{ form_rest(form) }}
{#        <img src="{{ form.captcha_code }}" title="captcha" width="{{ captcha_width }}" height="{{ captcha_height }}" />#}
        <input type="submit" value="Submit" />
    </form>
</span>
{% endblock %}